{
  "manifest_version": 3,
  "name": "Cornerstone Helper",
  "version": "0.1",
  "description": "Injects help tooltips into Cornerstone",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.csod.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "host_permissions": [
    "https://sharepoint.example.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
